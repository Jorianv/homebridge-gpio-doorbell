{
  "pluginAlias": "GPIO Doorbell",
  "pluginType": "accessory",
  "singular": false,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "placeholder": "Doorbell"
      },
      "gpioPin": {
        "title": "GPIO pin",
        "description": "The GPIO pin that should be used as input.",
        "type": "integer",
        "required": true,
        "placeholder": "e.g. 7 for GPIO 4"
      },
      "negateInput": {
        "title": "Negate input",
        "description": "If your circuit is NORMALLY CLOSED, set this to true.",
        "type": "boolean",
        "default": false
      }
    }
  }
}